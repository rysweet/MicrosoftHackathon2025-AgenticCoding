{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amplihack.dev/schemas/modular-build/review.schema.json",
  "title": "Modular Build Review Schema",
  "description": "Schema for quality review results in the Review phase",
  "type": "object",
  "required": ["quality_gates", "external_validations", "final_status", "review_version"],
  "properties": {
    "quality_gates": {
      "type": "object",
      "required": ["code_quality", "security_scan", "performance_check", "documentation"],
      "properties": {
        "code_quality": {
          "type": "object",
          "required": ["score", "issues"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 10,
              "description": "Overall code quality score (0-10)"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["severity", "message", "file", "line"],
                "properties": {
                  "severity": { "type": "string", "enum": ["error", "warning", "info"] },
                  "message": { "type": "string" },
                  "file": { "type": "string" },
                  "line": { "type": "integer", "minimum": 1 },
                  "rule": { "type": "string" },
                  "suggestion": { "type": "string" }
                }
              },
              "description": "List of code quality issues found"
            },
            "metrics": {
              "type": "object",
              "properties": {
                "complexity": { "type": "number" },
                "maintainability": { "type": "number" },
                "readability": { "type": "number" },
                "test_coverage": { "type": "number" }
              }
            }
          },
          "additionalProperties": false
        },
        "security_scan": {
          "type": "object",
          "required": ["vulnerabilities", "status"],
          "properties": {
            "vulnerabilities": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["severity", "description", "file", "cwe_id"],
                "properties": {
                  "severity": {
                    "type": "string",
                    "enum": ["critical", "high", "medium", "low", "info"]
                  },
                  "description": { "type": "string" },
                  "file": { "type": "string" },
                  "line": { "type": "integer", "minimum": 1 },
                  "cwe_id": { "type": "string", "pattern": "^CWE-[0-9]+$" },
                  "remediation": { "type": "string" },
                  "false_positive": { "type": "boolean", "default": false }
                }
              },
              "description": "Security vulnerabilities found"
            },
            "status": {
              "type": "string",
              "enum": ["clean", "warnings", "critical"],
              "description": "Overall security status"
            },
            "scan_tools": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Security scanning tools used"
            },
            "compliance_checks": {
              "type": "object",
              "properties": {
                "owasp_top_10": { "type": "boolean" },
                "security_headers": { "type": "boolean" },
                "input_validation": { "type": "boolean" },
                "authentication": { "type": "boolean" }
              }
            }
          },
          "additionalProperties": false
        },
        "performance_check": {
          "type": "object",
          "required": ["benchmarks", "recommendations"],
          "properties": {
            "benchmarks": {
              "type": "object",
              "properties": {
                "response_time": { "type": "object" },
                "throughput": { "type": "object" },
                "memory_usage": { "type": "object" },
                "cpu_usage": { "type": "object" }
              },
              "description": "Performance benchmark results"
            },
            "recommendations": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["category", "recommendation", "impact"],
                "properties": {
                  "category": {
                    "type": "string",
                    "enum": ["memory", "cpu", "io", "network", "algorithm"]
                  },
                  "recommendation": { "type": "string" },
                  "impact": { "type": "string", "enum": ["low", "medium", "high"] },
                  "implementation_effort": { "type": "string", "enum": ["low", "medium", "high"] }
                }
              },
              "description": "Performance improvement recommendations"
            },
            "bottlenecks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "function": { "type": "string" },
                  "file": { "type": "string" },
                  "metric": { "type": "string" },
                  "value": { "type": "number" }
                }
              }
            }
          },
          "additionalProperties": false
        },
        "documentation": {
          "type": "object",
          "required": ["completeness", "accuracy"],
          "properties": {
            "completeness": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Documentation completeness percentage"
            },
            "accuracy": {
              "type": "string",
              "enum": ["verified", "needs_review", "incomplete"],
              "description": "Documentation accuracy status"
            },
            "missing_documentation": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of missing documentation items"
            },
            "documentation_quality": {
              "type": "object",
              "properties": {
                "api_docs": { "type": "boolean" },
                "code_comments": { "type": "number", "minimum": 0, "maximum": 100 },
                "examples": { "type": "boolean" },
                "readme": { "type": "boolean" },
                "user_guide": { "type": "boolean" }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "external_validations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool", "result", "output"],
        "properties": {
          "tool": {
            "type": "string",
            "description": "Name of the external validation tool"
          },
          "result": {
            "type": "string",
            "enum": ["pass", "fail", "warning", "skipped"],
            "description": "Result of the validation"
          },
          "output": {
            "type": "string",
            "description": "Tool output or summary"
          },
          "execution_time": { "type": "number", "minimum": 0 },
          "version": { "type": "string" },
          "configuration": { "type": "object" },
          "exit_code": { "type": "integer" }
        },
        "additionalProperties": false
      }
    },
    "approval_workflow": {
      "type": "object",
      "properties": {
        "reviewers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["reviewer", "status"],
            "properties": {
              "reviewer": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["pending", "approved", "rejected", "changes_requested"]
              },
              "comments": { "type": "array", "items": { "type": "string" } },
              "reviewed_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "approval_requirements": {
          "type": "object",
          "properties": {
            "minimum_approvals": { "type": "integer", "minimum": 1 },
            "required_reviewers": { "type": "array", "items": { "type": "string" } },
            "auto_approval_criteria": { "type": "object" }
          }
        }
      }
    },
    "compliance_checks": {
      "type": "object",
      "properties": {
        "coding_standards": { "type": "boolean" },
        "security_standards": { "type": "boolean" },
        "performance_standards": { "type": "boolean" },
        "documentation_standards": { "type": "boolean" },
        "test_standards": { "type": "boolean" },
        "architectural_compliance": { "type": "boolean" }
      }
    },
    "final_status": {
      "type": "string",
      "enum": ["approved", "needs_fixes", "rejected"],
      "description": "Final review status"
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_issues": { "type": "integer", "minimum": 0 },
        "critical_issues": { "type": "integer", "minimum": 0 },
        "overall_score": { "type": "number", "minimum": 0, "maximum": 10 },
        "recommendation": { "type": "string" },
        "next_steps": { "type": "array", "items": { "type": "string" } }
      }
    },
    "review_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$",
      "description": "Review schema version"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "reviewed_at": { "type": "string", "format": "date-time" },
        "generation_reference": { "type": "string" },
        "review_duration": { "type": "string" },
        "agents_used": { "type": "array", "items": { "type": "string" } },
        "tools_used": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "additionalProperties": false
}
