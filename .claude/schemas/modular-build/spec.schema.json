{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amplihack.dev/schemas/modular-build/spec.schema.json",
  "title": "Modular Build Specification Schema",
  "description": "Schema for technical specifications in the Spec phase",
  "type": "object",
  "required": ["technical_specs", "implementation_details", "testing_strategy", "spec_version"],
  "properties": {
    "technical_specs": {
      "type": "object",
      "required": ["architecture", "data_models", "api_contracts"],
      "properties": {
        "architecture": {
          "type": "object",
          "required": ["pattern", "description", "components"],
          "properties": {
            "pattern": {
              "type": "string",
              "enum": [
                "mvc",
                "layered",
                "microservice",
                "event-driven",
                "pipeline",
                "plugin",
                "monolithic"
              ]
            },
            "description": { "type": "string" },
            "components": { "type": "array", "items": { "type": "string" } },
            "interactions": { "type": "array", "items": { "type": "object" } }
          }
        },
        "data_models": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "fields", "relationships"],
            "properties": {
              "name": { "type": "string" },
              "fields": { "type": "array", "items": { "type": "object" } },
              "relationships": { "type": "array", "items": { "type": "object" } },
              "constraints": { "type": "array", "items": { "type": "string" } },
              "indexes": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "api_contracts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["endpoint", "method", "description"],
            "properties": {
              "endpoint": { "type": "string" },
              "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"] },
              "description": { "type": "string" },
              "parameters": { "type": "object" },
              "request_schema": { "type": "object" },
              "response_schema": { "type": "object" },
              "error_responses": { "type": "array", "items": { "type": "object" } }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "implementation_details": {
      "type": "object",
      "required": ["file_structure", "key_algorithms", "error_handling"],
      "properties": {
        "file_structure": {
          "type": "object",
          "required": ["module_files", "test_files", "config_files"],
          "properties": {
            "module_files": { "type": "array", "items": { "type": "string" } },
            "test_files": { "type": "array", "items": { "type": "string" } },
            "config_files": { "type": "array", "items": { "type": "string" } },
            "documentation_files": { "type": "array", "items": { "type": "string" } }
          }
        },
        "key_algorithms": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description", "complexity"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "complexity": { "type": "string" },
              "input": { "type": "string" },
              "output": { "type": "string" }
            }
          }
        },
        "error_handling": {
          "type": "object",
          "required": ["strategy", "exception_types", "logging"],
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["fail-fast", "graceful-degradation", "retry-with-backoff", "circuit-breaker"]
            },
            "exception_types": { "type": "array", "items": { "type": "string" } },
            "logging": { "type": "object" },
            "recovery_procedures": { "type": "array", "items": { "type": "string" } }
          }
        },
        "performance_requirements": {
          "type": "object",
          "properties": {
            "response_time": { "type": "string" },
            "throughput": { "type": "string" },
            "memory_usage": { "type": "string" },
            "cpu_usage": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },
    "testing_strategy": {
      "type": "object",
      "required": ["unit_tests", "integration_tests", "coverage_target"],
      "properties": {
        "unit_tests": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["test_name", "target_function", "test_cases"],
            "properties": {
              "test_name": { "type": "string" },
              "target_function": { "type": "string" },
              "test_cases": { "type": "array", "items": { "type": "object" } },
              "mocks_required": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "integration_tests": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["test_name", "components", "scenario"],
            "properties": {
              "test_name": { "type": "string" },
              "components": { "type": "array", "items": { "type": "string" } },
              "scenario": { "type": "string" },
              "setup_requirements": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "coverage_target": {
          "type": "number",
          "minimum": 0.8,
          "maximum": 1.0,
          "description": "Minimum test coverage requirement (0.8-1.0)"
        },
        "testing_tools": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Testing frameworks and tools to use"
        }
      },
      "additionalProperties": false
    },
    "spec_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$",
      "description": "Specification version"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "contract_reference": { "type": "string" },
        "estimated_complexity": { "type": "string", "enum": ["low", "medium", "high"] },
        "dependencies_analyzed": { "type": "boolean" }
      }
    }
  },
  "additionalProperties": false
}
