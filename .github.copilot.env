# GitHub Copilot LiteLLM Integration Configuration
# Copy this file to .env and customize for your setup

# GitHub Authentication (Required)
# Get your token from: https://github.com/settings/tokens
# Or use: gh auth login --scopes copilot
GITHUB_TOKEN=your_github_token_here

# GitHub Copilot Configuration
GITHUB_COPILOT_ENABLED=true
GITHUB_COPILOT_LITELLM_ENABLED=true
GITHUB_COPILOT_MODEL=copilot-gpt-4
GITHUB_COPILOT_ENDPOINT=https://api.github.com

# Proxy Configuration
PROXY_TYPE=github_copilot
PORT=8080
HOST=localhost

# Optional: Model Preferences
PREFERRED_PROVIDER=github
BIG_MODEL=copilot-gpt-4
SMALL_MODEL=copilot-gpt-3.5-turbo

# Optional: Performance Settings
REQUEST_TIMEOUT=300
MAX_RETRIES=3
LOG_LEVEL=INFO
MAX_TOKENS_LIMIT=8192

# Optional: Other API Keys (for multi-provider support)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GEMINI_API_KEY=your_gemini_key_here
